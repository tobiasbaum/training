    /**
     * Diese Methode überprüft, ob zwei Dateien identisch sind. Wenn nein, werden Details
     * zum Unterschied geliefert. Wenn sie gleich sind, kommt null.
     */
    public static String compareFilesEqual(final String file1, final String file2) throws IOException {
        long pos = 0;
        try (InputStream f1 = new BufferedInputStream(new FileInputStream(file1));
             InputStream f2 = new BufferedInputStream(new FileInputStream(file2))) {
            while (true) {
                final int x1 = f1.read();
                final int x2 = f2.read();
                if (x1 != x2) {
                    return String.format(
                            "Files not equal (position: %d, byte file1: %d, byte file2: %d)",
                            pos, x1, x2);
                }
                if ((x1 <= 0) || (x2 <= 0)) {
                    break;
                }
                pos++;
            }
        }
        return null;
    }
