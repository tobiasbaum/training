			<input type="radio" name="programPract" id="programPract_3" value="3" required="true"><label for="programPract_3">About once a week</label><br/>
			<input type="radio" name="programPract" id="programPract_4" value="4" required="true"><label for="programPract_4">About once a day or more often</label><br/>
		</fieldset><br/>
		      
		<!-- review practice -->
