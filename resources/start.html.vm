			<input type="radio" name="javaExp" id="javaExp_3" value="3" required="true"><label for="javaExp_3">3 - 5 years</label><br/>
			<input type="radio" name="javaExp" id="javaExp_4" value="4" required="true"><label for="javaExp_4">6 - 10 years</label><br/>
			<input type="radio" name="javaExp" id="javaExp_5" value="5" required="true"><label for="javaExp_5">11 years or more</label><br/>
		</fieldset><br/>
		      
		<!-- programming practice -->
		<fieldset>
			<p>How often do you currently do programming?</p>
			<input type="radio" name="programPract" id="programPract_0" value="0" required="true"><label for="programPract_0">Not at all</label><br/>
			<input type="radio" name="programPract" id="programPract_1" value="1" required="true"><label for="programPract_1">About once a year</label><br/>
