class Invoice {
    private List<Integer> itemPrices;

    public Invoice() {
	    this(new ArrayList<>());
	}
	
    public Invoice(List<Integer> itemPrices) {
	    this.itemPrices = itemPrices;
	}
	
	public static Invoice copy(Invoice toCopy) {
	    return new Invoice(this.itemPrices);
	}
	
	public void addItemPrice(int itemPrice) {
		this.itemPrices.add(itemPrice);
	}
	
	public int getTotal() {
	    int sum = 0;
		for (Integer price : this.itemPrices) {
			sum += price;
		}
		return sum;
	}
}

class Main {
	public static void main(final String[] args) {
		Invoice a = new Invoice();
		a.addItemPrice(5);
		
		Invoice b = a.copy();
		b.addItemPrice(1);
		
		int total = a.getTotal() + b.getTotal();
		System.out.println(Integer.toString(total));
	}
}