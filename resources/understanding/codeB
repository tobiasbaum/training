class Invoice {
    private final List<Integer> itemPrices;

    public Invoice() {
	    this(new ArrayList<>());
	}

    public Invoice(final List<Integer> itemPrices) {
	    this.itemPrices = itemPrices;
	}

	public Invoice copy() {
	    return new Invoice(this.itemPrices);
	}

	public void addItemPrice(final int itemPrice) {
		this.itemPrices.add(itemPrice);
	}

	public int getTotal() {
	    int sum = 0;
		for (final Integer price : this.itemPrices) {
			sum += price;
		}
		return sum;
	}
}

class Main {
	public static void main(final String[] args) {
		final Invoice a = new Invoice();
		a.addItemPrice(5);

		final Invoice b = a.copy();
		b.addItemPrice(1);

		final int total = a.getTotal() + b.getTotal();
		System.out.println(Integer.toString(total));
	}
}
